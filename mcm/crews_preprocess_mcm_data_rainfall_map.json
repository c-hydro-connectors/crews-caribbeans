{
  "template": {
    "source_gridded_sub_path_time": "%Y/%m/%d/",
    "source_gridded_datetime": "%Y%m%d%H%M",
    "source_point_sub_path_time": "%Y/%m/%d/",
    "source_point_datetime": "%Y%m%d%H%M",
    "outcome_sub_path_time": "%Y/%m/%d/",
    "outcome_datetime": "%Y%m%d%H%M"
    },
  "data": {
    "static": {
      "filename" : "radar_grid.txt",
      "folder": "/DATA/crews/data_static/mcm/"
    },
    "dynamic": {
      "time": {
        "steps_observed": 1,
        "time_frequency": "30min"
      },
      "gauge": {
        "drops2": {
          "DropsAddress": "http://caribbean.mydewetra.cimafoundation.org/dds/rest",
          "DropsUser": null,
          "DropsPwd": null,
          "DropsSensor": "PLUVIOMETRO",
          "DropsGroup": "Dewetra%Caraibi",
          "lon_left": -63.5,
          "lon_right": -55.5,
          "lat_top": 16.8,
          "lat_bottom": 9.5,
          "codes_not_valid": []
        },
        "scale_factor": 1,
        "output":{
          "folder": "/DATA/crews/data_dynamic/gauge/{outcome_sub_path_time}",
          "filename": "{outcome_datetime}_gaugecumulated.txt"
        }
      },
      "radar": {
        "local": {
          "folder": "/DATA/crews/data_dynamic/radar/rainfall_map/{source_gridded_sub_path_time}",
          "filename": "{source_gridded_datetime}_rainrate.tif",
          "time_frequency": "6min",
          "max_valid": 400
        },
        "min_step_acceptable": 4,
        "scale_factor": 0.1,
        "output":{
          "folder": "/DATA/crews/data_dynamic/radar/rainfall_map/{outcome_sub_path_time}",
          "filename": "{outcome_datetime}_raincumulated.tif"
        }
      }
    },
    "log": {
      "filename": "crews_preprocessing_mcm.txt",
      "folder": "/home/silvestro/MSPG/op_chain/log/"
    }
  }
}

